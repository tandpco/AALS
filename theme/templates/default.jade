doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title {:options.title} {:options.title ? '-'} Adopt a Love Story
    link(rel="stylesheet", type="text/css", href="assets://css/style.css")
    link(rel="stylesheet", type="text/css", href="assets://css/stackicons-social-minimal.css")
    link(rel="stylesheet", href="assets://css/layerslider.css", type="text/css")
    style(type="text/css").
      .tk-proxima-nova{font-family:"proxima-nova",sans-serif;}.tk-museo{font-family:"museo",serif;}.tk-brandon-grotesque{font-family:"brandon-grotesque",sans-serif;}
      .full-width {
      position: absolute;
      left: 0;
      right: 0;
      height: 460px;
      overflow: hidden;
      }
      .full-width img {
      width: 100%;
      }
      .bump {
      display: block;
      height: 460px;
      width: 100%;
      }
      #startFundraiser .modal-header, 
      #projectUpdates .modal-header, 
      #moneyUsage .modal-header, 
      #familyModal .modal-header {
        border-bottom: 0;
        margin-bottom: -20px;
      }
      .modal-content li.update {
        margin-top:20px;
      }
      #startFundraiser ul, 
      #projectUpdates ul, 
      #moneyUsage ul, 
      #familyModal ul {
        padding: 0;
        margin: 0;
      }
      #startFundraiser > .modal-dialog.modal-sm, 
      #projectUpdates > .modal-dialog.modal-sm, 
      #moneyUsage > .modal-dialog.modal-sm, 
      #familyModal > .modal-dialog.modal-sm {
        width: 550px;
      }
      #startFundraiser > .modal-dialog.modal-sm > .modal-content, 
      #projectUpdates > .modal-dialog.modal-sm > .modal-content, 
      #moneyUsage > .modal-dialog.modal-sm > .modal-content,
      #familyModal > .modal-dialog.modal-sm > .modal-content {
        padding: 30px;
        border-radius: 3px;
      }
    // Slider CSS
    script(src="assets://js/layerslider.transitions.js", type="text/javascript")
    script(src="https://code.jquery.com/jquery-1.11.1.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
    script(src="assets://js/greensock.js", type="text/javascript")
    script(src="//use.typekit.net/laf1bvf.js")
    script(:ignore="true").
      try{Typekit.load();}catch(e){}
    // Rainmaker
    script(src="https://assets.donate.io/static/widget/embed.js", type="text/javascript", charset="utf-8")
    script(:ignore="true").
      var __rmSettings = {organization:'aals'}
    | <:jolt placeholder="head" />
  body
    theme:embed(file="includes/nav")
    | <:jolt placeholder="content" />
    theme:embed(file="includes/footer")
    | <:jolt placeholder="append" />
