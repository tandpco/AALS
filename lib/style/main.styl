@import 'nib'

.tk-proxima-nova{font-family:"proxima-nova",sans-serif;}.tk-museo{font-family:"museo",serif;}.tk-brandon-grotesque{font-family:"brandon-grotesque",sans-serif;}
.full-width {
position: absolute;
left: 0;
right: 0;
height: 460px;
overflow: hidden;
}
.full-width img {
width: 100%;
}
.bump {
display: block;
height: 460px;
width: 100%;
}

#startFundraiser
#projectUpdates
#moneyUsage
.special-modal
#familyModal
  .modal-header
    border-bottom: 0;
    margin-bottom: -20px;
    h3.modal-title
      font-size 28px
  ul
    padding: 0;
    margin: 0;
  > .modal-dialog.modal-sm
    width 550px
    > .modal-content
      font-size 16px
      color #969696
      padding 30px
      border-radius 3px
      li.update
        margin-top:20px;
      a.btn.btn-primary
        background-color #28a0b4
        border 0
        border-radius 3px
        padding 15px 30px
        text-transform uppercase
        &.bold
          font-family "brandon-grotesque"
          font-size 20px
          font-weight 500
          letter-spacing 1px
          margin-top 20px

#startFundraiser
	p
		color #a6a6a6
		font-weight 500
// STYLES TO MAKE THE MODAL TRIGGERS BEHAVE LIKE ACTIONABLE BUTTONS
a,img,h3
	&[data-toggle='modal']
		cursor: pointer
		transition-duration: 0.5s
		&:hover
			color: #35d6f0
img[data-toggle='modal']
	&:hover, &:focus, &:active
		border: 8px solid #35d6f0
h3[data-toggle='modal']:hover
	color: #35d6f0

.contact-white p
.contact p
  margin .8em 0

.module-messages-display
  .error
    font-weight bold
    font-size 16px
    color #c20000
    margin-bottom 20px

.login
  background-color rgba(0,0,0,0.6)
.donate-section
  padding 18% 12% 5% 12%
.donate-caption > p
  padding-top 0 !important
  font-size 34px
  font-weight 300
.donate-caption h1
  font-family "brandon-grotesque"
  text-transform uppercase
.navbar-transparent .nav li
  font-family "brandon-grotesque"
  text-transform uppercase
  font-weight 500
  a
    font-size 18px
  &.active a
    color #e8f300

.progress-bar
  box-shadow none

.engage-top .caption 
  margin-top 200px
  h2
    font-size 48px
    font-family "brandon-grotesque"
    text-transform uppercase
    font-weight 500
    margin-bottom 0
  h3
    font-size 30px
    font-weight 300

.section.video
  transition-duration 0.25s
  &:hover
    opacity 0.8
    cursor pointer

.contact-top, .engage-top
  background-size cover
