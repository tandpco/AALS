@import 'nib'

.tk-proxima-nova{font-family:"proxima-nova",sans-serif;}.tk-museo{font-family:"museo",serif;}.tk-brandon-grotesque{font-family:"brandon-grotesque",sans-serif;}
.full-width {
position: absolute;
left: 0;
right: 0;
height: 460px;
overflow: hidden;
}
.full-width img {
width: 100%;
}
.bump {
display: block;
height: 460px;
width: 100%;
}
#startFundraiser .modal-header, 
#projectUpdates .modal-header, 
#moneyUsage .modal-header, 
#familyModal .modal-header {
  border-bottom: 0;
  margin-bottom: -20px;
}
.modal-content li.update {
  margin-top:20px;
}
#startFundraiser ul, 
#projectUpdates ul, 
#moneyUsage ul, 
#familyModal ul {
  padding: 0;
  margin: 0;
}
#startFundraiser > .modal-dialog.modal-sm, 
#projectUpdates > .modal-dialog.modal-sm, 
#moneyUsage > .modal-dialog.modal-sm, 
#familyModal > .modal-dialog.modal-sm {
  width: 550px;
}
#startFundraiser > .modal-dialog.modal-sm > .modal-content, 
#projectUpdates > .modal-dialog.modal-sm > .modal-content, 
#moneyUsage > .modal-dialog.modal-sm > .modal-content,
#familyModal > .modal-dialog.modal-sm > .modal-content {
  padding: 30px;
  border-radius: 3px;
}
#startFundraiser
	p
		color #a6a6a6
		font-weight 500
	a.btn.btn-primary
		background-color #28a0b4
		border 0
		border-radius 3px
		padding 15px 30px
		text-transform uppercase
// STYLES TO MAKE THE MODAL TRIGGERS BEHAVE LIKE ACTIONABLE BUTTONS
a,img,h3
	&[data-toggle='modal']
		cursor: pointer
		transition-duration: 0.5s
img[data-toggle='modal']
	&:hover, &:focus, &:active
		border: 8px solid #35d6f0
h3,a
	&[data-toggle='modal']
		&:hover, &:focus, &:tab
			color: black