#share {
  font-family: proxima-nova, sans-serif;
  h3 {
    font-family: proxima-nova, sans-serif;
    font-size: 20px;
    text-transform: initial;
    color: #767676;
    letter-spacing: initial;
    margin-top: 60px;
  }
  p {
    color: #9a9a9a;
    margin-bottom: 20px;
    font-size: 16px;
    letter-spacing: 0.05em;
    font-weight: 300;
  }
  form {
    background #f7fafa
    padding 45px
    margin-bottom 100px
    margin-top 80px
    small {
      margin-top 5px
      opacity 0.75
      display block
    }
    label {
      text-transform uppercase
      color #a6a6a6
      letter-spacing 0.075em
      font-weight bold
      font-size 12px
    }
    .form-group {
      margin-bottom 25px
    }
    #message {
      margin-top 20px
      margin-bottom 0
    }
    input.form-control {
      height 40px
    }
    .message {
      border-radius 4px
      background #FFF
      border 1px solid #cccccc
      padding 15px 20px
    }
    button {
      background #35d6f0
      border-radius 0
      border 0
      margin 40px 0 -30px
      text-transform uppercase
      font-size 16px
      font-weight bold
      padding 10px 25px
      letter-spacing 0.075em
      &:hover, &:focus, &:active {
        background darken(#35d6f0, 15%)
      }
    }
    .form-control[readonly] {
      background #FFF
      cursor initial
      outline 0
      appearance none
      &:hover, &:focus, &:active {
        outline 0
        appearance none
      }
    }
  }
}
