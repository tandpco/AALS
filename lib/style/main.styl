h4.sub
  text-transform uppercase
  font-weight bold
  color #d2d1d1
  font-size 16px
  font-family "proxima-nova", sans-serif
  margin 60px 0 0
ul.families
  font-family "proxima-nova", sans-serif
  padding 0
  margin-bottom 100px
  li.family
    padding 30px
    margin 0 -30px
    img
      max-width 100%
    &:nth-of-type(even)
      background #f7fafa
    .col-md-5
      .thumbnail
        border 0
        padding 0
        @media (min-width: 769px)
          margin 0
        @media (max-width: 768px)
          margin-bottom 20px
    .col-md-7
      .content
        h1, h1 a
          font-size 20px
          font-weight bold
          color #767676
          letter-spacing 0.075em
          &:first-of-type
            margin-top 0
        p
          font-size 14px
          color #9a9a9a
          letter-spacing 0.05em
          line-height 18px
          &:last-of-type
            margin-bottom 20px
        .progress
          border-radius 0
          box-shadow none
          height 8px
          .progress-bar
            background #35d6f0
            min-width 1%
        .info
          .data
            float left
            margin-right 30px
            &:last-of-type
              margin-right 0
            strong
              color #767676
              display block
              font-size 20px
              margin-bottom -5px
            small
              font-size 14px
              color #9a9a9a
          .location
            padding-left 30px
            position relative
            &:before
              content url('../images/location-icon.png')
              position absolute
              left 0
              top -2px  
            p
              font-size 14px
              font-weight bold
              color #9a9a9a
              margin-top 20px
              margin-bottom 0
              text-transform uppercase
